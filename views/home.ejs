<% layout( 'layout' ) -%>

<% script( '//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js' ) %>
<% script( '/javascripts/subscribe.js' ) %>

<div class="row spacer"></div>
<div class="row" id="banner">
  <div class="two columns">
    <img src="/images/logo.png" alt="Hackers at EPFL logo" />
  </div>
  <div class="ten columns">
    <p class="lead"><br>Hackers at EPFL aims to promote the hacking culture and to foster innovation at <a href="http://epfl.ch">EPFL</a>,<br>one amazing event at a time.<br />
      Make new friends. Make stuff. Make the difference.</p>
  </div>
</div>
<div class="row spacer"></div>
<div class="row grid">
  <div class="four columns" id="events">
    <h4>
      Upcoming event
      <% if( events.future.length > 1 ) { %>
        <small><a href="/events">See all <%= events.future.length %> upcoming events</a></small>
      <% } %>
    </h4>
    <div class="row">
      <% if( !events.future.length ) { %>
      <div class="twelve columns">
        <p>There are no upcoming events.
        Check out our <a href="/events">past events</a> or our <a href="http://www.facebook.com/hackepfl/">Facebook page</a>.</p>
      </div>
      <% } else { %>
        <% for( var i = 0; i < events.future.length && i < 1; i++ ) { var event = events.future[ i ]; %>
          <div class="six columns">
            <a href="/events/<%= event.slug %>">
              <img src="https://graph.facebook.com/<%= event.id %>/picture?type=large" />
            </a>
            <h5><a href="/events/<%= event.slug %>"><%= event.name %></a></h5>
            <p><%= event.summary %></p>
          </div>
        <% } %>
      <% } %>
    </div>
  </div>
  <div class="four columns" id="news">
    <h4>News</h4>
    <div class="row">
      <div class="twelve columns">
        <ul>
        <% for( var i = 0; i < news.length; i++ ) { %>
          <li>
            <a href="<%= news[ i ].link %>"><%= news[ i ].title %></a>
            <small><%= moment( news[ i ].date ).format( 'LL' ) %></small>
          </li>  
        <% } %>
        </ul>
      </div>
    </div>
  </div>
  <div class="four columns" id="mailing-list">
    <h4>Stay in touch</h4>
    <div class="panel">
      <p>Subscribe to the mailing list:</p>
      <form id="subscribe" method="post" action="/subscribe">
        <input name="email" type="email" placeholder="your@email.com" class="email" />
        <input type="submit" class="radius button right submit" value="Subscribe" />
      </form>
    </div>
  </div>
</div>
