<% layout( 'layout' ) -%>
<% var md5 = require( './lib/utils' ).md5 %>

<main id="main-content">
  <div class="row" id="people">
    <div class="small-12 large-12 columns">
      <div class="row">
        <h2>whois hackersatepfl.com</h2>
        <p class="lead">
          Feel free to contact us at <a href="mailto:hackers@epfl.ch">hackers@epfl.ch</a>, everybody listed below will get your e-mail.
        </p>
      </div>
      <div class="row">
        <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-2">
          <% for( var i = 0; i < people.length; i++ ) { var person = people[ i ]; %>
            <li>
              <div class="small-4 large-4 columns">
                <img src="http://www.gravatar.com/avatar/<%= md5( person.email ) %>?s=130" alt="<%= person.name %>'s photo" />
              </div>
              <div class="small-8 large-8 columns">
                <h5><%= person.name %></h5>
                <% if( person.bio ) { %>
                  <p><%= person.bio %></p>
                <% } %>
                <p class="icons">
                  <% if( person.twitter ) { %>
                  <span class="icon twitter"></span>
                  <a href="https://twitter.com/<%= person.twitter %>">@<%= person.twitter %></a>
                  <% } %>
                  <br />
                  <% if( person.facebook ) { %>
                  <span class="icon facebook"></span>
                  <a href="https://facebook.com/<%= person.facebook %>"><%= person.facebook %></a>
                  <% } %>
                  <% if( person.github ) { %>
                  <br />
                  <span class="icon github"></span>
                  <a href="https://github.com/<%= person.github %>"><%= person.github %></a>
                  <% } %>
                  <% if( person.website ) { %>
                  <br />
                  <span class="icon website"></span>
                  <a href="http://<%= person.website %>"><%= person.website %></a>
                  <% } %>
                </p>
              </div>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</main>
